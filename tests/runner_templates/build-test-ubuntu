  group: ${{ github.ref }}-${{ github.workflow }}-${{ github.event_name }}-${{ github.ref == 'refs/heads/main' && github.sha || '' }}
  cancel-in-progress: true

jobs:
  build:
    name: Ubuntu TEST_NAME Test
    runs-on: ${{ matrix.os }}
    timeout-minutes: JOB_TIMEOUT
    strategy:
